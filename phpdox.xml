<phpdox xmlns="http://xml.phpdox.net/config">
    <project name="Mava" source="src" workdir="${basedir}/app/build/phpdox">
        <collector publiconly="false">
            <include mask="*.php" />
        </collector>

        <generator output="${basedir}/app/build">
            <build engine="html" enabled="true" output="api">
                <file extension="html" />
            </build>
        </generator>
    </project>
</phpdox>
